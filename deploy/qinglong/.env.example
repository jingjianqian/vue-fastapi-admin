# 青龙面板环境变量配置示例
# 复制此文件为 .env 并根据实际情况修改

# ========== 青龙基础配置 ==========
TZ=Asia/Shanghai
LANG=zh_CN.UTF-8

# ========== 数据库配置 ==========
# PostgreSQL 示例
DATABASE_URL=postgresql://username:password@localhost:5432/database_name

# SQLite 示例（简单场景）
# DATABASE_URL=sqlite:///ql/data/db.sqlite3

# MySQL 示例
# DATABASE_URL=mysql://username:password@localhost:3306/database_name

# ========== ORM 配置 ==========
# Tortoise ORM 配置模块路径
TORTOISE_ORM_MODULE=app.core.settings
# Python 路径（确保能导入项目模块）
PYTHONPATH=/ql/repo/vue-fastapi-admin

# ========== 爬虫配置 ==========
# 数据源选择: all(全部) | wechat_official(微信官方) | third_party(第三方)
MINI_PROGRAM_SOURCE=all

# 单次抓取数量限制
MINI_PROGRAM_LIMIT=100

# 浏览器初始化失败时是否使用模拟数据
# true: 允许降级为模拟数据 | false: 直接报错（推荐用于生产环境）
USE_MOCK_ON_BROWSER_FAIL=false

# ========== Celery 配置（可选）==========
# Redis 连接
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/1

# ========== 日志配置 ==========
LOG_LEVEL=INFO
LOG_PATH=/ql/log

# ========== 其他配置 ==========
# 是否启用调试模式
DEBUG=false
