/* pages/detail/detail.wxss */
.detail-container {
  padding: 20rpx;
}

.detail-header {
  display: flex;
  align-items: center;
  padding: 30rpx;
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}

.app-icon {
  width: 120rpx;
  height: 120rpx;
  border-radius: 20rpx;
  margin-right: 24rpx;
}

.header-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.app-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
}

.app-desc {
  font-size: 28rpx;
  color: #999;
}

.detail-actions {
  display: flex;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.action-btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
}

.action-btn.primary {
  background: #18a058;
  color: #fff;
}

.action-btn.active {
  background: #ffeb3b;
  color: #333;
}

.detail-content {
  margin-bottom: 20rpx;
}

.content-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.content-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
}

.qrcode-section {
  text-align: center;
}

.qrcode-image {
  width: 400rpx;
  height: 400rpx;
  margin-top: 20rpx;
}
