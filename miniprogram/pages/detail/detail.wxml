<!--pages/detail/detail.wxml-->
<view class="detail-container">
  <view class="detail-header">
    <image class="app-icon" src="{{appInfo.icon}}" mode="aspectFill"></image>
    <view class="header-info">
      <text class="app-name">{{appInfo.name}}</text>
      <text class="app-desc">{{appInfo.desc}}</text>
    </view>
  </view>

  <view class="detail-actions">
    <button class="action-btn primary" bindtap="onLaunch">打开小程序</button>
    <button class="action-btn {{appInfo.is_favorited ? 'active' : ''}}" bindtap="onToggleFavorite">
      {{appInfo.is_favorited ? '已收藏' : '收藏'}}
    </button>
  </view>

  <view class="detail-content card">
    <view class="content-title">小程序介绍</view>
    <text class="content-text">{{appInfo.desc || '暂无介绍'}}</text>
  </view>

  <view class="qrcode-section card" wx:if="{{appInfo.qrcode_url}}">
    <view class="content-title">小程序码</view>
    <image class="qrcode-image" src="{{appInfo.qrcode_url}}" mode="aspectFit"></image>
  </view>
</view>
