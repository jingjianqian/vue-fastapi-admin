<view class="favorite-container">
  <view class="favorite-list" wx:if="{{list.length > 0}}">
    <view class="list-item" wx:for="{{list}}" wx:key="id" bindtap="onAppTap" data-id="{{item.id}}">
      <image class="item-icon" src="{{item.icon}}" mode="aspectFill"></image>
      <view class="item-info">
        <text class="item-name">{{item.name}}</text>
        <text class="item-desc">{{item.desc}}</text>
      </view>
    </view>
  </view>

