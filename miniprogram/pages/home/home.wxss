/* pages/home/home.wxss */
.home-container {
  padding-bottom: 120rpx; /* 为自定义tab栏预留空间 */
}

/* 搜索栏 */
.search-bar {
  padding: 20rpx;
  background: #fff;
}

.search-box {
  display: flex;
  align-items: center;
  background: #f5f5f5;
  border-radius: 32rpx;
  padding: 16rpx 24rpx;
}

.search-input {
  flex: 1;
  margin-left: 16rpx;
  font-size: 28rpx;
}

/* Banner */
.banner-section {
  padding: 0 20rpx 20rpx;
}

.banner-swiper {
  width: 100%;
  height: 300rpx;
  border-radius: 12rpx;
  overflow: hidden;
}

.banner-image {
  width: 100%;
  height: 100%;
}

/* 分类 */
.category-section {
  background: #fff;
  padding: 20rpx 0;
  margin-bottom: 20rpx;
}

.category-scroll {
  white-space: nowrap;
}

.category-list {
  display: inline-flex;
  padding: 0 20rpx;
}

.category-item {
  display: inline-block;
  padding: 12rpx 32rpx;
  margin-right: 20rpx;
  background: #f5f5f5;
  border-radius: 32rpx;
  font-size: 28rpx;
  color: #333;
}

.category-item.active {
  background: #18a058;
  color: #fff;
}

/* 通用标题 */
.section-title {
  padding: 20rpx;
}

.title-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

/* 置顶小程序 */
.top-section {
  background: #fff;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.app-grid {
  display: flex;
  flex-wrap: wrap;
  margin: 0 -10rpx;
}

.app-item {
  width: 25%;
  padding: 10rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.app-icon {
  width: 120rpx;
  height: 120rpx;
  border-radius: 20rpx;
  margin-bottom: 12rpx;
}

.app-name {
  font-size: 24rpx;
  color: #333;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 100%;
}

/* 小程序列表 */
.app-list-section {
  background: #fff;
  padding: 20rpx;
}

.app-list {
  margin-top: 20rpx;
}

.list-item {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.list-item:last-child {
  border-bottom: none;
}

.item-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 16rpx;
  margin-right: 20rpx;
}

.item-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.item-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
  font-weight: 500;
}

.item-desc {
  font-size: 24rpx;
  color: #999;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.item-action {
  padding-left: 20rpx;
}

.action-text {
  font-size: 24rpx;
  color: #18a058;
}
