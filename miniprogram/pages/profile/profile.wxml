<!--pages/profile/profile.wxml-->
<view class="profile-container">
  <view class="user-section card">
    <view class="user-info">
      <image class="avatar" src="{{userInfo.avatar || 'https://via.placeholder.com/120/18a058/ffffff?text=User'}}" mode="aspectFill"></image>
      <text class="username">{{userInfo.nickname || userInfo.username || '未登录'}}</text>
    </view>
  </view>

  <view class="menu-list">
    <view class="menu-item" bindtap="onMyFavorites">
      <text class="menu-text">我的收藏</text>
      <text class="menu-arrow">></text>
    </view>
    <view class="menu-item" bindtap="onAbout">
      <text class="menu-text">关于我们</text>
      <text class="menu-arrow">></text>
    </view>
  </view>

  <view class="logout-section">
    <button class="logout-btn" bindtap="onLogout">退出登录</button>
  </view>
</view>

<!-- 自定义tab栏 -->
<custom-tab-bar />
